{
    "manifest_version": 3,
    "name": "Task Reminder",
    "description": "A simple app to set reminders (time optional)",
    "version": "1.2",
    "background": {
        "service_worker": "./background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "Images/icon.png"
    },
    "icons": {
        "64": "Images/icon.png",
        "128":"Images/icon.png"
    },
    "permissions": [
        "notifications",
        "storage"
    ]
}